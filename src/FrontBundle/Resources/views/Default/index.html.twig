                    {#</div>#}
                {#{% endfor %}#}
            {#</div>#}
        {#</div>#}
    </div>

    <div class="jumbotron">
        <div class="container">
            <h2><i class="glyphicon glyphicon-star"></i> <b>Rekomenduojamos</b> prekės</h2>
            <hr />
            <div class="row row-eq-height">
            {% for item in randomProducts %}
                <div class="col-xs-6 col-sm-4">
                    <div class="card">
                        <img class="card-img-top img-responsive center-block" src="{{ item.image }}" alt="{{ item.title }}">
                        <div class="card-block">
                            <h4 class="card-title">
                                <a href="{{ absolute_url("/") }}product/{{ item.token }}">{{ item.title }}</a>
                            </h4>
                            <p class="card-text"></p>
                            <span class="price pull-left">{{ item.price }} Eur</span>
                            <a href="{{ absolute_url("/") }}product/{{ item.token }}" class="pull-right btn btn-primary">Plačiau</a>
                            <div class="clearfix"></div>
                        </div>
                    </div>
                </div>
            {% endfor %}
            </div>
        </div>
    </div>
    <div class="jumbotron">
        <div class="container">
            <h2><i class="glyphicon glyphicon-shopping-cart"></i> <b>Parduotuvės</b></h2>
            <hr />
            <div class="row">
                {% for shop in shops %}
                    <div class="col-xs-6 col-sm-4">
                        <a href="{{ shop.shopLink }}" target="_blank" title="{{ shop.shopName }}"><img class="card-img-top img-responsive center-block" src="{{ shop.logo }}" alt="{{ shop.shopName }}"></a>
                        <div class="card-blok">
                            {{ shop.description }}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
