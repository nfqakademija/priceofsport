        <div class="row" >
            <div class="col-lg-12">
                <div class="input-group">
                    {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

                    {{ form_start(form) }} {{ form_widget(form.keyword) }} {{ form_widget(form.send) }} {{ form_end(form) }}
                </div>
            </div>
        </div>
        {#<div class="row pull-right">#}
            {#<div class="col-md-12">#}
                {#{% for shop in shops %}#}
                    {#<div class="col-md-6">#}
