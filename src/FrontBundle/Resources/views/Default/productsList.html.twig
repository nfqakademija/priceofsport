    {% for item in products %}
        <div class="col-lg-3 col-md-3 col-sm-4 col-xs-6">
            <div class="card">
                <img class="card-img-top img-responsive center-block" src="{{ item.image }}" alt="{{ item.title }}">
                <div class="card-block">
                    <h4 class="card-title">{{ item.title }}</h4>
                    <p class="card-text"></p>
                    <span class="price pull-left">{{ item.price }}</span>
                    <a href="product/{{ item.id }}" class="pull-right btn btn-primary">Plaƒçiau</a>
                    <div class="clearfix"></div>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
